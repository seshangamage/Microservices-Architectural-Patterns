{
  "info": {
    "name": "SpringCloud API Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "var json = pm.response.json();",
              "if (json && json.token) {",
              "  pm.collectionVariables.set(\"token\", json.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/token",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "token"
          ]
        }
      }
    },
    {
      "name": "Gateway Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/actuator/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "actuator",
            "health"
          ]
        }
      }
    },
    {
      "name": "Gateway Info",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/actuator/info",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "actuator",
            "info"
          ]
        }
      }
    },
    {
      "name": "Gateway Metrics",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/actuator/metrics",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "actuator",
            "metrics"
          ]
        }
      }
    },
    {
      "name": "Order (example)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/order/status/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "order",
            "status",
            "1"
          ]
        }
      }
    },
    {
      "name": "Payment (example)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/payment/payments",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "payment",
            "payments"
          ]
        }
      }
    },
    {
      "name": "Inventory (example)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/inventory/items/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "inventory",
            "items",
            "1"
          ]
        }
      }
    }
  ]
}
